class Solution:
    def reverseStr(self, s: str, k: int) -> str:
        #convert string to array,use for loop jump 2k char and using while reverse k char,start of the char get it from for loop and end char could be k char from i/ len of string if k is greater than len of s.
        
        l = []
        for r in s:
            l.append(r)
        
        for i in range(0,len(l),2*k):
            start = i
            end = min(i+k,len(l))-1
            while start<end:
                l[start],l[end] = l[end],l[start]
                start+= 1
                end  -= 1
           
        s1=  "".join(l)
        return s1
