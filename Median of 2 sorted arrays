class Solution:
    def findMedianSortedArrays(self, nums1: List[int], nums2: List[int]) -> float:
        num3 = nums1 + nums2
        num3.sort()
        l1 = len(num3)
        if l1 % 2 != 0:
            m = l1/2
            x = ceil(m)
            return num3[x-1]
        elif l1 % 2 == 0:
            m1 = int(l1/2)
            m2 = int(l1/2+1)
            n1 = num3[m1-1]
            n2 = num3[m2-1]
            m = (n1 + n2)/2
            return m
             
